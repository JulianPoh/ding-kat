<div class="container container-margin">
    <div class="row">
        <div class="col-lg-12 text-center">
            <% if @user %>
                <h1>Profile</h1>
                <br>
                <h2>Hello <%= @user.first_name %></h2>
            <% if @subscription %>
                <h2>Your current subscription plan is for <%= @subscription.name %></h2>
                <br><br>
                <button><%= link_to  "Edit Subscription", edit_subscription_path %></button>
            <br>
            <% else %>
                <h2>You do not have a subscription plan, click <span><button><%= link_to  "here", subscriptions_path %></button></span> to choose one</h2>
            <% end %>
            
            <br>
            <button><%= link_to  "Edit Profile", edit_user_registration_path %></button>
            <% else %>
                <h2><%= link_to  "Please Login", user_session_path %></h2>
            <% end %>
            <br><br>
            <button class="sub-button"><%= link_to  "Balik Kampong (Back to Home)", root_path %></button>
        </div>
    </div>
</div>