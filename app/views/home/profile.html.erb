<div class="container container-margin">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Profile</h1>
            <h2>Hello <%= @user.first_name %> <%= @user.last_name %></h2>
            
            <% if @user.menu_id != nil %>
                <p>
                    Your selected menu: 
                        <b>
                        <%= @menu.name %>
                        </b>
                </p>
            <% end %>

            <% if @user.address_one != nil %>
                <b>
                <h3>Delivery Address</h3>
                <p><%= @user.address_one %>
                <% if @user.address_two != nil %>
                    <%= @user.address_two %>
                <% end %>
                <%= @user.postal_code %></p>
                </b>
            <% end %>

            <% if @user.delivery_arranged %>
            <p>Your subscription started on: <b><%= @user.subscription_start %></b></p>
                <% if @user.subscription_renew %>
                    <p>Your subscription is recurring</p>
                <% else %>
                    <p>Your subscription will end on <b><%= @user.subscription_end %></b></p>
                <% end %>
                <%= link_to  "Cancel Subscription", cancel_delivery_path, class: "btn btn-primary", method: :put, data: {confirm: 'Are you sure you want to cancel?'} %>
            <% else %>
                <% if @user.subscription_end != nil %>
                    <p>Your subscription will end on <b><%= @user.subscription_end %></b></p>
                <% end %>
                <p><%= link_to 'New Subscription',menus_path ,class: "btn btn-info" %></p>
            <% end %>

        <%= link_to  "Edit Profile", edit_user_registration_path , class: "btn btn-primary" %>
        <%= link_to  "Balik Kampong (Back to Home)", root_path , class: "btn btn-primary" %>
        </div>
    </div>
</div>