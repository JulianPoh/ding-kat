<div class="container mt-5 pt-5">
    <div class="row">
    <div class="col-lg-12 text-center">

      <h1>SELECT MENU</h1>
      
        <div class="row">
            <% @menus.each do |menu| %>
                <% if @current == menu.id %>
                    <div class="card" style="width: 18rem; border: 3px solid #007bff;">
                <% else %>
                    <div class="card" style="width: 18rem;">
                <% end %>
                    <img class="card-img-top" <%= image_tag menu.img_src %>
                    <div class="card-body">
                        <h5 class="card-title"><%= menu.name %></h5>
                        <h5 class="card-title">$<%= menu.price %>/week</h5>
                    <div class="card-text">
                        <p><%= menu.line_1 %></p>
                        <p><%= menu.line_2 %></p>
                        <p><%= menu.line_3 %></p>
                        <p><%= menu.line_4 %></p>
                    </div>
                    <% if @current == menu.id %>
                        <button class="sub-button btn btn-primary"><%= link_to  "Arrange Delivery", delivery_path %></button>
                    <% else %>
                        <button class="sub-button btn btn-primary"><%= link_to  "Select This", select_menu_path(menu), method: :put %></button>
                    <% end %>
                    </div>
                </div>
            <% end %>

        </div>

        <div class="row">

          <div class="col-sm-3">
          </div>

          <div class="col-sm-3">
          </div>

        </div>
        <br>
        <button class="sub-button"><%= link_to  "Balik Kampong (Back to Home)", root_path %></button>

    </div>
    </div>
</div>
